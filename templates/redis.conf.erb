daemonize <%= @daemonize %>
pidfile "<%= @_pidfile %>"
port <%= @port %>
tcp-backlog <%= @tcp_backlog %>
bind <%= @ipaddress %>
timeout <%= @timeout %>
tcp-keepalive <%= @tcp_keepalive %>
loglevel <%= @rloglevel %>
logfile "<%= @_logfile %>"
databases <%= @databases %>
<% @save.each do |v| -%>
save <%= v %>
<% end -%>
stop-writes-on-bgsave-error <%= @stop_writes_on_bgsave_error %>
rdbcompression <%= @rdbcompression %>
rdbchecksum <%= @rdbchecksum %>
dbfilename <%= @dbfilename %>
dir <%= @_dir %>
slave-serve-stale-data <%= @slave_serve_stale_data %>
slave-read-only <%= @slave_read_only %>
slave-priority <%= @slave_priority %>
repl-diskless-sync no
repl-diskless-sync-delay 5
repl-disable-tcp-nodelay no
appendonly no
appendfilename "appendonly.aof"
appendfsync everysec
no-appendfsync-on-rewrite no
auto-aof-rewrite-percentage 100
auto-aof-rewrite-min-size 64mb
aof-load-truncated yes
lua-time-limit 5000
slowlog-log-slower-than 10000
slowlog-max-len 128
latency-monitor-threshold <%= @latency_monitor_threshold %>
notify-keyspace-events ""
hash-max-ziplist-entries 512
hash-max-ziplist-value 64
list-max-ziplist-entries 512
list-max-ziplist-value 64
set-max-intset-entries 512
zset-max-ziplist-entries 128
zset-max-ziplist-value 64
hll-sparse-max-bytes 3000
activerehashing yes
client-output-buffer-limit normal 0 0 0
client-output-buffer-limit slave 256mb 64mb 60
client-output-buffer-limit pubsub 32mb 8mb 60
hz 10
aof-rewrite-incremental-fsync yes
maxclients <%= @maxclients %>
maxmemory <%= @maxmemory %>
<% if @redis32 -%>protected-mode <%= @protected_mode %>
<% end -%>
<% if @slaveof -%>slaveof <%= @slaveof %>
<% end -%>
